{
    /*"background": {
        "persistent": true,
        "scripts": [""]
    },*/
    "browser_action": {
        // "default_icon": "assets/icon19.png",
        "default_popup": "html/popup.html",
        "default_title": "NTULamsBeautifier"
    },
    "content_scripts": [{
        "css": ["css/core.css", "css/modules/plyr.2.0.16.css"],
        "js": ["js/jquery.3.2.1.min.js", "js/modules/plyr.2.0.16.js", "js/modules/url.js", "js/video.js"],
        "matches": ["*://lams.ntu.edu.sg/lams/tool/*"],
        "run_at": "document_end"
    }, {
        "css": ["css/core.css"],
        "js": ["js/jquery.3.2.1.min.js", "js/modules/url.js", "js/direct.js"],
        "matches": ["*://ntulearn.ntu.edu.sg/webapps/blackboard/content/listContent.jsp?course_id=*"],
        "run_at": "document_end"
    }],
    // "default_locale": "en",
    "description": "__MSG_extension_description__",
    "externally_connectable": {
        "matches": ["*://ntulearn.ntu.edu.sg/*", "*://lams.ntu.edu.sg/*"]
    },
    "homepage_url": "http://google.com",
    /*"icons": {
        "128": "assets/icon128.png",
        "16": "assets/icon16.png",
        "19": "assets/icon19.png",
        "48": "assets/icon48.png"
    },*/
    "manifest_version": 2,
    "name": "NTU Lams Beautifier",
    "options_page": "html/popup.html",
    "permissions": ["notifications", "alarms", "storage", "background", "webRequest", "webRequestBlocking", "*://lams.ntu.edu.sg/lams/tool/*"],
    "short_name": "LamsB",
    "update_url": "https://localhost",
    "version": "0.02",
    "web_accessible_resources": ["css/*.css", "js/*.js", "img/*"]
}